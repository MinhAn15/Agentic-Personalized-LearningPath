# ============================================
# Agentic Personalized Learning Path - Backend
# Environment Variables - FULL MODE
# ============================================

# ============================================
# SQL Server Database
# ============================================
SQLSERVER_HOST=localhost
SQLSERVER_PORT=1433
SQLSERVER_DATABASE=learning_db
SQLSERVER_USER=sa
SQLSERVER_PASSWORD=your_sql_server_password
SQLSERVER_DRIVER=ODBC Driver 17 for SQL Server

# ============================================
# Neo4j Aura (Cloud Knowledge Graph)
# Get your credentials from: https://console.neo4j.io/
# ============================================
NEO4J_URI=neo4j+s://xxxxxxxx.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_aura_password

# ============================================
# LLM (Google Gemini via LlamaIndex)
# Get your API key from: https://aistudio.google.com/app/apikey
# ============================================
GOOGLE_API_KEY=your_google_api_key
GEMINI_MODEL=gemini-1.5-flash

# ============================================
# Redis Cache
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Chroma Vector Database
# ============================================
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./chroma_db
